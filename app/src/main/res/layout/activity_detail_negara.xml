<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetailNegaraActivity">

    <ImageView
        android:id="@+id/imageViewFlag"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/indo"
        android:contentDescription="Bendera Negara" />

    <TextView
        android:id="@+id/textViewNamaNegara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Negara"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewDeskripsiNegara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi Negara"
        android:layout_marginTop="8dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewRatingNegara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating Negara"
        android:layout_marginTop="8dp"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/buttonShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share" />

</LinearLayout>
